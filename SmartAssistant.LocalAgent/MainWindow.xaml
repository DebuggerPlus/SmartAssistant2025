<Window x:Class="SmartAssistant.LocalAgent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartAssistant LocalAgent - Mouse Testing" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Тестирование действий с мышью"
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Поле для ввода координат -->
        <GroupBox Grid.Row="1" Header="Координаты мыши" Margin="0,0,0,20">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="X:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="XCoordinateTextBox"
                         Text="100" Margin="0,0,20,0" PreviewTextInput="NumberValidationTextBox"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="YCoordinateTextBox"
                         Text="100" PreviewTextInput="NumberValidationTextBox"/>

                <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        Content="Получить текущую позицию мыши"
                        Click="GetCurrentMousePosition_Click" Margin="0,10,10,0"/>

                <Button Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                        Content="Переместить курсор"
                        Click="MoveMouse_Click" Margin="10,10,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Кнопки для тестирования действий -->
        <GroupBox Grid.Row="2" Header="Действия с мышью" Margin="0,0,0,20">
            <UniformGrid Columns="2" Margin="10">
                <Button Content="Левый клик" Click="LeftClick_Click"
                        Margin="5" Padding="10,5" Background="#4CAF50" Foreground="White"/>
                <Button Content="Левый двойной клик" Click="LeftDoubleClick_Click"
                        Margin="5" Padding="10,5" Background="#2196F3" Foreground="White"/>
                <Button Content="Правый клик" Click="RightClick_Click"
                        Margin="5" Padding="10,5" Background="#FF9800" Foreground="White"/>
                <Button Content="Средний клик" Click="MiddleClick_Click"
                        Margin="5" Padding="10,5" Background="#9C27B0" Foreground="White"/>
            </UniformGrid>
        </GroupBox>

        <!-- Лог действий -->
        <GroupBox Grid.Row="3" Header="Лог действий">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox" IsReadOnly="True"
                         FontFamily="Consolas" FontSize="12"
                         Background="#F5F5F5" BorderThickness="0"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>